<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Tổng quan chi tiêu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/holo_blue_light"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tvTotalExpense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total spending: 0 VND"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tvRemainingBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remaining budget: 0 VND"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Chi tiêu theo danh mục -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spend by category"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingBottom="8dp"
        android:gravity="center"/>

    <ListView
        android:id="@+id/lvCategoryExpenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:background="@android:color/white"
        android:padding="8dp"
        android:elevation="4dp"
        android:layout_marginBottom="16dp"/>

    <!-- Chi tiêu theo ngày -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spending by day"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingBottom="8dp"
        android:gravity="center"/>

    <ListView
        android:id="@+id/lvDateExpenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:background="@android:color/white"
        android:padding="8dp"
        android:elevation="4dp"
        android:layout_marginBottom="16dp"/>

    <!-- Chi tiêu theo tháng (MỚI) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spending by month"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingBottom="8dp"
        android:gravity="center"/>

    <ListView
        android:id="@+id/lvMonthExpenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:background="@android:color/white"
        android:padding="8dp"
        android:elevation="4dp"/>
</LinearLayout>
